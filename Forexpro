  <footer>
    <p>¬© 2025 Currency Exchange | Contact: info@currencyworld.com</p>
  </footer>

  <script>
    // Currency data
    let currencies = [
      { id: 1, name: "US Dollar", code: "USD", rate: 1, image: "https://flagcdn.com/us.svg" },
      { id: 2, name: "Euro", code: "EUR", rate: 0.93, image: "https://flagcdn.com/eu.svg" },
      { id: 3, name: "Japanese Yen", code: "JPY", rate: 151.2, image: "https://flagcdn.com/jp.svg" },
      { id: 4, name: "Indian Rupee", code: "INR", rate: 83.1, image: "https://flagcdn.com/in.svg" },
      { id: 5, name: "British Pound", code: "GBP", rate: 0.78, image: "https://flagcdn.com/gb.svg" },
      { id: 6, name: "Australian Dollar", code: "AUD", rate: 1.51, image: "https://flagcdn.com/au.svg" }
    ];

    let cart = [];

    // Display currency list
    function showCurrencies() {
      const content = document.getElementById("content");
      content.innerHTML = "";
      currencies.forEach(cur => {
        const card = document.createElement("div");
        card.className = "currency-card";
        card.innerHTML = `
          <img src="${cur.image}" alt="${cur.name}">
          <h3>${cur.name}</h3>
          <p>Rate: ${cur.rate}</p>
          <button class="btn" onclick="addToCart(${cur.id})">Add to Cart</button>
          <button class="btn" onclick="deleteCurrency(${cur.id})">Delete</button>
        `;
        content.appendChild(card);
      });
    }

    // Add new currency
    function addCurrency(name, code, rate, image) {
      const newId = currencies.length + 1;
      currencies.push({ id: newId, name, code, rate, image });
      showCurrencies();
    }

    // Delete currency (CRUD - Delete)
    function deleteCurrency(id) {
      currencies = currencies.filter(c => c.id !== id);
      showCurrencies();
    }

    // Add to cart
    function addToCart(id) {
      const currency = currencies.find(c => c.id === id);
      cart.push(currency);
      alert(currency.name + " added to cart!");
    }

    // Show cart
    function showCart() {
      const content = document.getElementById("content");
      content.innerHTML = "<h2>Your Bill</h2>";
      const cartDiv = document.createElement("div");
      cartDiv.className = "cart";
      let total = 0;

      cart.forEach((item, index) => {
        total += item.rate;
        cartDiv.innerHTML += `
          <div class="cart-item">
            <span>${item.name}</span>
            <span>$${item.rate}</span>
          </div>
        `;
      });

      cartDiv.innerHTML += `<h3>Total: $${total.toFixed(2)}</h3>`;
      content.appendChild(cartDiv);
    }

    // Contact info
    function showContact() {
      const content = document.getElementById("content");
      content.innerHTML = `
        <h2>Contact Us</h2>
        <p>üìß Email: info@currencyworld.com</p>
        <p>üìû Phone: +1 555 123 4567</p>
        <p>üè¢ Address: Global Currency Tower, New York</p>
      `;
    }

    // Initial view
    showCurrencies();
  </script>

